---
interface Props {
  href: string
}

const { href } = Astro.props
---

<section>
  <a href={href}>
    <slot />
  </a>
</section>

<style>
  section {
    position: fixed;
    bottom: 0;
    width: 960px;
    height: auto;
    padding: var(--padding);
    display: flex;
    flex-direction: column;
    align-items: end;
    gap: var(--gap);
  }

  a {
    padding: 16px 32px;
    background-color: var(--dark-spring-green);
    border-radius: var(--rounded-small);
    color: var(--white);
    text-decoration: none;
    font-weight: 600;
  }

  a:hover {
    background: var(--dark-spring-green-light);
  }

  /* Media query para tablets */
  @media (min-width: 768px) and (max-width: 1023px) {
    section {
      width: 768px;
    }
  }

  /* Media query para dispositivos m√≥viles */
  @media (max-width: 767px) {
    section {
      width: 360px;
  }

  
</style>
